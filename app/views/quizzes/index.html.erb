<h1>QUIZZES</h1>


<div class = "bulk">
	<a href="/interval"><button class="indexButton">INTERVAL</button></a>
	<a href="/chord"><button class="indexButton">CHORD</button></a>
	<a href="/scale"><button class="indexButton">SCALE</button></a>

	<p> <% @board_nodes.each do |node| %> 
		<%= node.quiz_id %>

		<% end %>

		<%= @board_nodes.find(1).quiz_id %>

	</p>

	<h2>High Scores</h2>


<br>


<div class = "scores">
	<h3>Interval</h3>
	
	<ul style="list-style-type:none;">
		<% @quizzes.each do |quiz| %>
			<li>
				
			<% if quiz.quiz_type == "Interval Quiz"%>
				<%= quiz.quiz_taker %> - <%= quiz.score %> - <%= quiz.quiz_type %> - rank: <%= quiz.rank %>
			<% end %>
			</li>


		<% end %>
	</ul>


</div>

