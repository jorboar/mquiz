		dataElement3.html("Total points: " + quiz.total_points);

		dataElement.html("This scale is " + note1.name + " ________.");

		seconds = 20;
		guard = 21;
		pointGuard = quiz.total_points + 2501;

		document.getElementById('timer_spot').innerHTML = seconds;

	}

